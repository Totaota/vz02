<div class="row">
    <div class="col-md-3">
        <%= image_tag avatar_url(@user), class:"avatar-full" %>
        <div class="panel panel-default">
            <div class="panel-heading">Informations du compte</div>
            <div class="panel-body">
                Email : <%= @user.email %><br>
                Prénom : <%= @user.first_name %><br>
                Nom :<%= @user.last_name %><br>
                Poste occupé : <%= @user.profil %>
            </div>
        </div>

    
    
        <div class="panel panel-default">
            <div class="panel-heading">Informations sur l'entreprise</div>
            <div class="panel-body">
                Email : <%= @user.email %><br>
                Numéro de téléphone : <%= @user.tel %><br>
                Adresse : <%= @user.address %><br>
                Ville : <%= @user.city %><br>
                Numéro SIRET : <%= @user.siret %><br>
                Catégorie : <%= @user.rubric %><br>
            </div>
        </div>
    </div>
</div>