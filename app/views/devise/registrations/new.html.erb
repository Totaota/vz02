<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <h2>Inscription</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devise_errors' %>
      <div class="form-group">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Ex: Jean" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Ex: Dupont" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Ex: mon-entreprise@vz.fr" %>
      </div>
      <div class="form-group">
        <%= f.label :profil %><br />
        <%= f.text_field :profil, autofocus: true, class: "form-control", placeholder: "Ex:1 Gérant, Community manager, Responsable marketing...  " %>
      </div>
      <div class="form-group">
        <% if @minimum_password_length %>
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Votre mot de passe doit comprendre 8 caractères ou plus" %>
        <% end %>
      </div>
      <%= f.label :password_confirmation %><br />
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmer votre mot de passe" %>
      </div>
    </div>
    <div class="col-md-6 col-xs-12">
      <div class="form-group">
        <%= f.label :social_reason %><br />
        <%= f.text_field :social_reason, autofocus: true, class: "form-control", placeholder: "Ex: Joe coiffure " %>
      </div>
      <div class="form-group">
        <%= f.label :siret %><br />
        <%= f.text_field :siret, autofocus: true, class: "form-control", placeholder: "Ex: 362 521 879 00034 " %>
      </div>
      <div class="form-group">
        <%= f.label :tel %><br />
        <%= f.text_field :tel, autofocus: true, class: "form-control", placeholder: "Ex: 0472727272" %>
      </div> 
      <div class="form-group">
        <%= f.label :rubric %><br />
        <%= f.text_field :rubric, autofocus: true, class: "form-control", placeholder: "Ex: LIST" %>
      </div>      
      <div class="form-group">
        <%= f.label :address %><br />
        <%= f.text_field :address, autofocus: true, class: "form-control", placeholder: "Ex: 10 rue des peupliers" %>
      </div>
      <div class="form-group">
        <%= f.label :city %><br />
        <%= f.text_field :city, autofocus: true, class: "form-control", placeholder: "Ex: Mâcon" %>
      </div>
    </div>
        <div class="col-md-12">
            <div class="form-group">
              <span class="btn btn-default btn-file">
                Upload mon logo d'entreprise
                <%= f.file_field :avatar %>
              </span>
            </div>
        </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <div class="actions">
        <%= f.submit "Inscription", class: "btn btn-primary" %>
      </div>
        <% end %>
    </div> 
  </div>
</div>
